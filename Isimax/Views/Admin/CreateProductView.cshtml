@using Isimax.Models
@{
    Layout =  "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container">
    <div class="row admin_panel-header">
        <div class="col-md-4 header-title">
            Isimax Administration
        </div>
        <div class="col-md-1 offset-md-7 logout-button">
            <form action="/Admin/Logout" method="post">
                <button>Çıkış Yap</button>
            </form>
        </div>
    </div>

    <div class="row dashboard-title">
        Ürün ekle
    </div>

    <div class="row">
        <form method="post" asp-action="CreateProduct" enctype="multipart/form-data">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-6">
                          <div class="mb-1 mt-1">
                            <label class="form-label">Ürün kodu:</label>
                            <input type="text" name="Code" class="form-control" required>
                          </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                          <div class="mb-1 mt-1">
                            <label class="form-label">Adı:</label>
                            <input type="text" name="Title" class="form-control" required>
                          </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                          <div class="mb-1 mt-1">
                            <label class="form-label">Fiyat:</label>
                            <input type="text" name="Price" class="form-control" required>
                          </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                          <div class="mb-1 mt-1">
                            <label class="form-label">Açıklaması:</label>
                            <input type="text" name="Desc" class="form-control">
                          </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                          <div class="mb-1 mt-1">
                            <label class="form-label">(300x280) Görsel:</label>
                            <input type="file" name="Image" class="form-control" required>
                          </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-1 mt-1">
                            <label class="form-label">Kategori:</label>
                            <select class="form-select" name="CategoryId" aria-label="Default select example" required>
                                <option value="" selected>Select category</option>
                                @foreach (var item in Model){
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row mt-2 productParametersInputGroup">
                    <div class='row'>
                        <div class='col-md-6'> 
                            <label class="form-label">Ürün Parametreleri</label>
                            <div class="row">
                                <div class="col-md-5"> 
                                    <input type='text' name='ProductParameterName' class='form-control' placeholder="Adı" required> 
                                </div>
                                <div class="col-md-5"> 
                                    <input type='text' name='ProductParameterValue' class='form-control' placeholder="Parametre" required> 
                                </div>
                            </div>
                        </div> 
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-6">
                          <div class="mb-1 mt-1">
                              <button id="addProductParameterButton" type="button" class="btn btn-primary">Ürün Parametresi Ekle</button>
                          </div>
                    </div>
                </div>

                <div class="row mt-2 recommendedProductInputGroup">
                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label">Tavsiye Edilen Ürünler</label>
                            <div class="input-group mb-3">
                                <input type="number" placeholeder="Ürünun Id" name="RecommendedProduct" class="form-control">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                          <div class="mb-1 mt-1">
                              <button id="addRecommendedProductButton" type="button" class="btn btn-primary">Tavsiye Edilen Ürünü ekle</button>
                          </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-2 mt-2">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </div>
            </div>
        </form>
    </div>


</div>