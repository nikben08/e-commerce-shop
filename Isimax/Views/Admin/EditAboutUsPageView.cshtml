@using Isimax.Models
@{
    Layout =  "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container">
    <div class="row admin_panel-header">
        <div class="col-md-4 header-title">
            Isimax Administration
        </div>
        <div class="col-md-1 offset-md-7 logout-button">
            <form action="/Admin/Logout" method="post">
                <button>Çıkış Yap</button>
            </form>
        </div>
    </div>

    <div class="row dashboard-title">
        <div class="col-md-12">
            Hakkımızda Sayfasını Değiştir
        </div>
    </div>
     <div class="row">
        <form method="post" asp-action="EditAboutUsPageData" enctype="multipart/form-data">
            <div class="col-md-12">

                <div class="row">
                    <div class="col-md-6">
                          <div class="mb-1 mt-1">
                            <label class="form-label">(1920x700) Görsel:</label>
                            <div class="row">
                                <div class="col-md-9">
                                    <input type="file" name="BannerImage" class="form-control">
                                </div>
                                <div class="col-md-3 uploaded_image_name">
                                    <input type="text" value="@Model.BannerImage" readonly>
                                </div>
                            </div>                            
                          </div>
                    </div>
                </div>


                
                <div class="row">
                    <div class="col-md-6">
                          <div class="mb-1 mt-1">
                            <label class="form-label">Başlık Metin:</label>
                            <textarea type="text" name="Text" class="form-control" required>@Model.Text</textarea>
                          </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                          <div class="mb-1 mt-1">
                            <label class="form-label">Mission:</label>
                            <textarea type="text" name="MissionText" class="form-control" required>@Model.MissionText</textarea>
                          </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                          <div class="mb-1 mt-1">
                            <label class="form-label">Vision:</label>
                            <textarea type="text" name="VisionText" class="form-control" required>@Model.VisionText</textarea>
                          </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                          <div class="mb-1 mt-1">
                            <label class="form-label">Values:</label>
                            <textarea type="text" name="ValuesText" class="form-control" required>@Model.ValuesText</textarea>
                          </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-2 mt-2">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        </form>
    </div>


</div>