@using Isimax.Models
@{
    Layout =  "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container">
    <div class="row admin_panel-header">
        <div class="col-md-4 header-title">
            Isimax Administration
        </div>
        <div class="col-md-1 offset-md-7 logout-button">
            <form action="/Admin/Logout" method="post">
                <button>Çıkış Yap</button>
            </form>
        </div>
    </div>

    <div class="row dashboard-title">
        <div class="col-md-12">
            Add Category
        </div>
    </div>

     <div class="row">
        <form method="post" asp-action="UpdateCategory" enctype="multipart/form-data">
            <div class="col-md-12">
                <div class="col-md-6">
                    <div class="mb-1 mt-1">
                    <label class="form-label">Product Id:</label>
                    <input type="text" name="Id" class="form-control" placeholder="" value="@Model.Id" readonly>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                          <div class="mb-1 mt-1">
                            <label class="form-label">Category:</label>
                            <input type="text" name="Name" class="form-control" value="@Model.Name" placeholder="">
                          </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                          <div class="mb-1 mt-1">
                            <label class="form-label">(300x280) Görsel:</label>
                            <div class="row">
                                <div class="col-md-9">
                                    <input type="file" name="Image" class="form-control">
                                </div>
                                <div class="col-md-3 uploaded_image_name">
                                    <input type="text" value="@Model.Image" readonly/>
                                </div>
                            </div>
                             
                          </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-2 mt-2">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>