@using Isimax.Models
@{
    Layout =  "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container">
    <div class="row admin_panel-header">
        <div class="col-md-4 header-title">
            Isimax Administration
        </div>
        <div class="col-md-1 offset-md-7 logout-button">
            <form action="/Admin/Logout" method="post">
                <button>Çıkış Yap</button>
            </form>
        </div>
    </div>

    <div class="row dashboard-title">
        <div class="col-md-12">
            Yönetici kullanıcıyı güncelleme
        </div>
    </div>

     <div class="row">
        <form action="/Admin/UpdateUser" method="post">
            <div class="col-md-12">
                <div class="col-md-6">
                    <div class="mb-1 mt-1">
                    <label class="form-label">Product Id:</label>
                    <input type="text" name="Id" class="form-control" placeholder="" value="@Model.Id" readonly>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                          <div class="mb-1 mt-1">
                            <label class="form-label">Email:</label>
                            <input type="text" name="Email" class="form-control" value="@Model.Email">
                          </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                          <div class="mb-1 mt-1">
                            <label class="form-label">Password:</label>
                            <input type="password" name="Password" class="form-control" value="@Model.Password">
                          </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-2 mt-2">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>