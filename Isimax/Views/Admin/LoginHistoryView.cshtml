@using Isimax.Models
@{
    Layout =  "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container">
    <div class="row admin_panel-header">
        <div class="col-md-4 header-title">
            Isimax Administration
        </div>
        <div class="col-md-1 offset-md-7 logout-button">
            <form action="/Admin/Logout" method="post">
                <button>Çıkış Yap</button>
            </form>
        </div>
    </div>

    <div class="row dashboard-title">
        <div class="col-md-10">
            Login History
        </div>
        <div class="col-md-2">
            <form action="/Admin/DeleteLoginHistory" method="post">
                <button class="btn btn-danger">Eski Girişleri Sil</button>
            </form>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12">
            <table class="table table-striped">
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Date</th>
                    <th>IP</th>
                </tr>
                @foreach (var item in Model){
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Email</td>
                    <td>@item.Date</td>
                    <td>@item.Ip</td>
                </tr>
                }
            </table>
        </div>
    </div>


</div>