@using Isimax.Models
@{
    Layout =  "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container">
    <div class="row admin_panel-header">
        <div class="col-md-4 header-title">
            Isimax Administration
        </div>
        <div class="col-md-1 offset-md-7 logout-button">
            <form action="/Admin/Logout" method="post">
                <button>Çıkış Yap</button>
            </form>
        </div>
    </div>

    <div class="row dashboard-title">
        <div class="col-md-12">
            Değiştirilecek ürünü seçiniz
        </div>
    </div>

    <div class="row search-form">
        <div class="col-md-8">
            <form action="/Admin/SearchProduct" method="post" >
                <div class="input-group">
                    <input type="text" name="query" class="form-control" placeholder="Search product" aria-label="Recipient's username" aria-describedby="button-addon2">
                    <button class="btn btn-outline-secondary" type="submit" id="button-addon2"><i class="fa-solid fa-magnifying-glass"></i></button>
                </div>
            </form>
        </div>
    </div>

    <div class="row data-list">
        <div class="col-md-12">
            <table class="table table-striped">
                <tr>
                    <th>Id</th>
                    <th>Ürün Kodu</th>
                    <th>Adı</th>
                    <th>Fiyat</th>
                    <th>Açıklaması</th>
                    <th>Kategori</th>
                    <th>Fotoğraf</th>
                    <th>Action</th>
                </tr>
                @foreach (var item in Model){
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Code</td>
                        <td>@item.Title</td>
                        <td>@item.Price</td>
                        <td>@item.Desc</td>
                        <td>@item.CategoryName</td>
                        <td><img src="/uploads/@item.Image" /></td>
                        <td>
                            <button type="button" data-productid=@item.Id class="btn btn-danger deleteProduct">Delete</button>
                            <button type="button" data-productid=@item.Id class="btn btn-primary changeProduct">Change</button>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>


</div>